<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:text="@string/select_color_textview_text"
            android:id="@+id/one_color_delay_effect_config_color_textView"
            android:layout_gravity="center"
            android:minHeight="40dp"
            android:visibility="visible"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/one_color_delay_effect_config_color_button"/>
        <View android:id="@+id/one_color_delay_effect_config_color"
            android:layout_width="33dp"
            android:layout_height="86dp"
            android:clickable="true"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/one_color_delay_effect_config_color_textView"
            android:layout_toStartOf="@+id/one_color_delay_effect_config_color_button"
            android:layout_alignBottom="@+id/one_color_delay_effect_config_color_textView"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_color_button_text"
            android:id="@+id/one_color_delay_effect_config_color_button"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delay_config_textView_text"
            android:id="@+id/one_color_delay_effect_config_delay_textView"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:labelFor="@+id/one_color_delay_effect_config_delay_editText"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:id="@+id/one_color_delay_effect_config_delay_editText"
            android:visibility="visible"
            android:layout_alignParentEnd="true"
            android:inputType="numberSigned"
            android:text="@string/delay_editText_text"
            android:gravity="center"
            android:layout_toEndOf="@+id/one_color_delay_effect_config_delay_textView" />


    </RelativeLayout>


</LinearLayout>